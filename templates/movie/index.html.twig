{% extends 'base.html.twig' %}

{% block title %}Movie - {{ movie.title }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1>{{ movie.title }}</h1>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th scope="col">ReleasedAt</th>
                            <th scope="col">Productor</th>
                            <th scope="col">Tag</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>{{ movie.releasedAt }}</td>
                            <td>{{ movie.productor }}</td>
                            <td>{{ movie.genres }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
